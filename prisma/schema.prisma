// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id              String      @id @default(cuid())
  productId       String      @unique // 商品ID（例: B024-7）
  boxNumber       String?     // 箱番号（例: B024）
  rowNumber       String?     // 行番号（例: 7）
  supplier        Supplier    @relation(fields: [supplierId], references: [id])
  supplierId      String      // 仕入れ元
  name            String      // 商品名
  description     String?     // 商品説明
  purchasePrice   Decimal     // 商品単価（税別）
  commission      Decimal?    // 買い手数料（税別）
  status          String      @default("in_stock") // ステータス (in_stock, sold, reserved)
  auctionDate     DateTime?   // オークション日
  auctionName     String?     // オークション名（フォルダ名: 0111_Daikichi）
  documents       Document[]
  importedAt      DateTime    @default(now())
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  
  @@index([supplierId])
  @@index([status])
  @@index([auctionDate])
}

model Supplier {
  id              String      @id @default(cuid())
  name            String      @unique // 業者名（例: Daikichi）
  code            String      @unique // 業者コード
  parserConfig    Json        // パーサー設定（JSON）
  isActive        Boolean     @default(true)
  products        Product[]
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
}

model Document {
  id              String      @id @default(cuid())
  product         Product?    @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId       String?     // 商品に紐付かないファイル（請求書等）はnull
  driveFolder     DriveFolder @relation(fields: [driveFolderId], references: [id])
  driveFolderId   String
  fileName        String      // ファイル名
  fileType        String      // pdf, csv, etc.
  driveFileId     String      @unique // Google DriveのファイルID
  filePath        String      // Drive上のパス
  processedAt     DateTime?   // 処理完了日時
  processingError String?     // エラーメッセージ
  createdAt       DateTime    @default(now())
  
  @@index([productId])
  @@index([driveFolderId])
}

model DriveFolder {
  id              String      @id @default(cuid())
  folderPath      String      @unique // 例: 2026/01/0111_Daikichi
  driveFolderId   String      @unique // Google DriveのフォルダID
  auctionDate     DateTime    // オークション日（0111から抽出）
  auctionName     String      // オークション名（Daikichi）
  status          String      @default("pending") // pending, processing, completed, error
  lastSyncedAt    DateTime?   // 最終同期日時
  documents       Document[]
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  
  @@index([status])
  @@index([auctionDate])
}

model ImportLog {
  id                String      @id @default(cuid())
  folderPath        String
  status            String      // success, partial, error
  itemsProcessed    Int         @default(0)
  itemsSuccess      Int         @default(0)
  itemsFailed       Int         @default(0)
  errorDetails      Json?
  invoiceAmount     Decimal?    // PDF請求書の総額
  systemAmount      Decimal?    // システム計算の総額
  amountDifference  Decimal?    // 差額
  hasAmountMismatch Boolean     @default(false) // 金額不一致フラグ
  
  // オークション単位の参加費・送料（業者設定を上書き、nullの場合は業者設定を使用）
  participationFee        Decimal?    // 参加費
  participationFeeTaxType String?     // 'included' | 'excluded'
  shippingFee             Decimal?    // 送料
  shippingFeeTaxType      String?     // 'included' | 'excluded'
  
  startedAt         DateTime    @default(now())
  completedAt       DateTime?
  
  @@index([status])
  @@index([startedAt])
  @@index([hasAmountMismatch])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
